<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TabHost android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TabWidget android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@android:id/tabcontent" >


                <RelativeLayout
                    android:id="@+id/Inicio"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Platos1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ListView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/Lista"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Platos2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:id="@+id/btn1"
                        android:src="@drawable/plato6"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:onClick="Tallarines" />

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:id="@+id/btn2"
                        android:src="@drawable/plato4"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:nestedScrollingEnabled="false"
                        android:onClick="Tacacho" />

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:id="@+id/btn3"
                        android:src="@drawable/plato3"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:onClick="Saltado" />

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:id="@+id/btn4"
                        android:src="@drawable/plato2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:onClick="Juane" />

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:id="@+id/btn5"
                        android:src="@drawable/ceviche"
                        android:layout_alignTop="@+id/btn5"
                        android:layout_alignParentEnd="true"
                        android:onClick="Chaufa" />

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:id="@+id/btn6"
                        android:src="@drawable/chaufa"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/btn6"
                        android:layout_alignEnd="@+id/btn6"
                        android:nestedScrollingEnabled="false"
                        android:onClick="Ceviche" />
                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>
